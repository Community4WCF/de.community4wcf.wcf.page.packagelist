<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/options.xsd">
	<import>
		<categories>
			<category name="packagelist">
				<parent>general</parent>
				<options>module_packagelist</options>
				<showorder>29</showorder>
			</category>
		</categories>
		<options>
			<!-- module options -->
			<option name="module_packagelist">
				<categoryname>module.content.managepages</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<!-- /module options -->
			<option name="packagelist_items_per_page">
				<categoryname>packagelist</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>20</defaultvalue>
				<showorder>1</showorder>
			</option>
			<option name="allow_spider_on_packagelist">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<hidden>1</hidden>
				<showorder>2</showorder>
			</option>
			<option name="packagelist_enable_package">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<showorder>3</showorder>
			</option>
			<option name="packagelist_enable_packageurl">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>4</showorder>
			</option>
			<option name="packagelist_enable_packagedescription">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<showorder>5</showorder>
			</option>
			<option name="packagelist_enable_packageversion">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<showorder>6</showorder>
			</option>
			<option name="packagelist_enable_packagedate">
				<categoryname>packagelist</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<showorder>7</showorder>
			</option>
		</options>
	</import>
